{if EntityHasChildren}
    <li class="file">
	<div class="entity-icon glyphicon {>EntityIcon}"></div>
	<label for="{>EntityString}">
	    {>EntityString}
	</label>
	<input onclick="EDITOR.SelectEntity({>EntityID});"
	       type="checkbox"
	       id="{>EntityString}">
	<ol>{>EntityChildren}</ol>
    </li>
{else}
    <li class="file">
	<div class="entity-icon glyphicon {>EntityIcon}"></div>
	<span onclick="EDITOR.SelectEntity({>EntityID});">
	    {>EntityString}
	</span>
    </li>
{/if}
